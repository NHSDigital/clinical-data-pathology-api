root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[*.md]
indent_size = unset

[*.py]
indent_size = 4

[{Dockerfile,Dockerfile.}*]
indent_size = 4

[{Makefile,*.mk,go.mod,go.sum,*.go,.gitmodules}]
indent_style = tab

# Ignore insert_final_newline rule for all auto generated json pact files in the pacts folders
[**/pacts/*.json]
insert_final_newline = unset

# Ignore insert_final_newline rule for auto generated devcontainer lock file
[.devcontainer/devcontainer-lock.json]
insert_final_newline = unset
